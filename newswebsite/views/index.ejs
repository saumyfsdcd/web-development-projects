<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS only -->
  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

  <title>NewsMonkey</title>
  <style>
    .navbar-brand {
      font-size: xx-large;
    }

    .articles{
      border: 2px solid grey;
      margin: 50px;
      display: flex;
      flex-direction: column;
      gap: 15px;
      padding: 14px;
    }

    .article{
      font-size: xx-large;
    }

    .arrows{
      display: flex;
      justify-content: space-between;
      margin-left: 50px;
      margin-right: 50px;
    }

    .arrow{
      padding: 15px;
      background-color: rgb(47, 182, 236);
      outline: none;
      border: none;
      color: white;
      font-size: x-large;
      border-radius: 5%;
    }
  </style>
</head>

<body>
  <!-- <img src="../logo.png" width="50px" height="50px" alt="df"> -->

  <%-include('nav');%>

  <div class="articles">
    <%articles.map((data,idx)=>{%>
      <h1 class="article">
        <%=idx+1%>.
        <%=data.title%>
      </h1>
      <%})%>
  </div>
  <div class="arrows">
    <a class="arrow"><i class="fa-solid fa-arrow-left"></i></a>
    <a class="arrow"><i class="fa-solid fa-arrow-right"></i></a>
  </div>
</body>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/513ea60794.js" crossorigin="anonymous"></script>
</html>